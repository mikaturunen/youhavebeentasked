polymer-element(name="yhbt-task" attributes="task preview")
    style(type="text/css" src="/public/elements/task/task.css")

    //- Display only the minor details of the task if in preview mode
    template(if="{{preview}}")
        //- TODO limit the task.title + task.description length if it gets too high, ellipse + cut --> 
        div.task
            div.task-title
                h3 {{task.title}}
            div.task-description
                span {{task.description}}
            div.task-edit
            
    //- When not in preview mode, display the whole task at hand, fetch it
    template(if="{{!preview}}")
        div.task   
            span NOT A PREVIEW :D
    
    script(src="/public/elements/task/task.js")
